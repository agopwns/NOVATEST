<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SCHEDULE.UI.ScheduleAddPlace"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/round_gray"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/left_arrow"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:hint="관광지/맛집/호텔 검색"
            android:background="@null"
            />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_save_choicePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:background="@drawable/round_gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
<!--            TODO: 내주변 장소로 조회하는 기능 넣어야 됨. -->
        </LinearLayout>
    </LinearLayout>

<!--사용자가 선택한 아이템을 보여줄 가로 리사이클러뷰 -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_choice_place"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/darker_gray">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_sights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관광" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛집" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tap_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
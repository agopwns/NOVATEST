<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="70dp"
    android:layout_height="80dp"
    >
<LinearLayout
    android:id="@+id/layout_item_choice_place"
    android:layout_marginRight="10dp"
    android:orientation="vertical" android:layout_width="60dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_choice_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        />
    <TextView
        android:id="@+id/tv_choice_place_name"
        android:text="오사카"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:gravity="center"
        />
</LinearLayout>

    <ImageView

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:layout_gravity="right"
        />
</FrameLayout>
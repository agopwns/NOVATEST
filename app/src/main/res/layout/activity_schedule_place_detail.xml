<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SCHEDULE.UI.SchedulePlaceDetailActivity"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        >
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SCHEDULE.UI.ScheduleOlympicDailyScedule"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left_arrow"
            android:layout_margin="20dp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_margin="20dp"
            android:layout_gravity="right"            />
    </FrameLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/darker_gray">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_famousRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주변 맛집" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_touristAttraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주변 관광지" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
